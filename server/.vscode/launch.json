{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "[api] [no-deps: tokio-console] default config",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mywebnote",
                    "--package=mywebnote"
                ],
                "filter": {
                    "name": "mywebnote",
                    "kind": "bin"
                },
            },
            "env": {
                "RUST_BACKTRACE": "full",
            },
            "args": [
                "api",
                "--config",
                "${workspaceFolder}/etc/api.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "[api] [no-deps: tokio-console] no config",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mywebnote",
                    "--package=mywebnote"
                ],
                "filter": {
                    "name": "mywebnote",
                    "kind": "bin"
                },
            },
            "env": {
                "RUST_BACKTRACE": "full"
            },
            "args": [
                "api"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "[api] [deps: tokio-console] default config",
            "cargo": {
                "args": [
                    "build",
                    "--features",
                    "tokio-console",
                    "--bin=mywebnote",
                    "--package=mywebnote"
                ],
                "filter": {
                    "name": "mywebnote",
                    "kind": "bin"
                },
                "env": {
                    // valid command-line: RUSTFLAGS="--cfg tokio_unstable" && cargo build
                    // see:https://github.com/wl4g-collect/tokio-rs-console/tree/main/console-subscriber#enabling-tokio-instrumentation
                    "RUSTFLAGS": "--cfg tokio_unstable"
                }
            },
            "env": {
                "RUST_BACKTRACE": "full",
            },
            "args": [
                "api",
                "--config",
                "${workspaceFolder}/etc/api.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "[api] [deps: tokio-console] no config",
            "cargo": {
                "args": [
                    "build",
                    "--features",
                    "tokio-console",
                    "--bin=mywebnote",
                    "--package=mywebnote"
                ],
                "filter": {
                    "name": "mywebnote",
                    "kind": "bin"
                },
                "env": {
                    // valid command-line: RUSTFLAGS="--cfg tokio_unstable" && cargo build
                    // see:https://github.com/wl4g-collect/tokio-rs-console/tree/main/console-subscriber#enabling-tokio-instrumentation
                    "RUSTFLAGS": "--cfg tokio_unstable"
                }
            },
            "env": {
                "RUST_BACKTRACE": "full"
            },
            "args": [
                "api"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}